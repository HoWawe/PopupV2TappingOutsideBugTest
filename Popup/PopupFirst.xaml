<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="PopupV2CanBeDismissedByTappingOutsideOfPopupBug.Popup.FirstPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:TypeArguments="system:String">

    <VerticalStackLayout Spacing="20">
        <Label Text="This First Popup" TextColor="Blue" />
        <Button
            x:Name="OpenSecondPopupButton"
            Clicked="OpenSecondPopupButton_Clicked"
            Text="Open Secondary Popup" />

        <Button
            x:Name="CloseFirstPopupButton"
            Clicked="CloseFirstPopupButton_Clicked"
            Text="Close This Popup" />
    </VerticalStackLayout>
</toolkit:Popup>

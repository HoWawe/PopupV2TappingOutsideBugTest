<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="PopupV2CanBeDismissedByTappingOutsideOfPopupBug.Popup.SecondaryPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:TypeArguments="system:String">

    <VerticalStackLayout Spacing="20">

        <Label Text="This Secondary Popup" TextColor="Blue" />
        <Label Text="The error occurs when this popup is closed." TextColor="Red" />
        <Button
            x:Name="ClosePopupSecondButton"
            Clicked="ClosePopupSecondButton_Clicked"
            Text="Close Secondary Popup" />
    </VerticalStackLayout>
</toolkit:Popup>